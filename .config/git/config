[core]
	preloadindex = true
	hooksPath = ~/.config/git/hooks

[advice]
	statusHints = false

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[rebase]
	missingCommitsCheck = warn

[commit]
	gpgsign = true

[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[url "git@github.com:"]
	insteadOf = "github:"

[url "git@github.com:SushyDev/"]
	insteadOf = "sushydev:"

[include]
	path = ~/.config/git/user
